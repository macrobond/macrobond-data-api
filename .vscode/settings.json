{
    "editor.rulers": [
        120
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        ".pytest_cache": true,
        "dist/": true,
        "macrobond_data_api.egg-info/": true,
        "macrobond_data_api_python_env/":true,
        ".env/":true,
        "build/": true,
        "tests/**/__init__.py": true
    },
    "python.testing.pytestArgs": ["-p", "no:faulthandler", "--durations=50", "-vv"],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "diffEditor.ignoreTrimWhitespace": false,

    "task.autoDetect": "off",

    "git.commandsToLog":["push","commit"]
}